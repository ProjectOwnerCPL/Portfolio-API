{
  "name": "portfolio-api",
  "version": "1.0.0",
  "description": "API REST pour un portfolio professionnel",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test-api.js",
    "test-mongodb": "node test-mongodb.js",
    "test-browser": "start test-api.html",
    "setup-mongodb": "node setup-mongodb.js",
    "setup-mongodb-auto": "node setup-mongodb.js --install",
    "mongodb-atlas": "node setup-mongodb.js --atlas",
    "ng": "cd frontend && ng",
    "ng-build": "cd frontend && ng build",
    "ng-build-prod": "cd frontend && ng build --configuration production",
    "ng-serve": "cd frontend && ng serve --proxy-config proxy.conf.json",
    "build": "cd frontend && ng build --configuration production",
    "dev:full": "concurrently \"npm run dev\" \"npm run ng-serve\""
  },
  "keywords": [
    "api",
    "portfolio",
    "express",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "mongoose": "^8.17.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "nodemon": "^3.0.1"
  }
}
